<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel_comp"
    android:layout_width="match_parent"
    android:layout_height="342sp"
    android:padding="5sp"
    android:layout_gravity="center"
    android:orientation="vertical"

    android:background="@drawable/samplebackground">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/green"
        android:scaleType="centerCrop"
        />
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="top"
        android:layout_marginTop="40sp"
        android:layout_alignParentTop="true"

        android:layout_width="270sp"
        android:layout_height="180sp"

        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/popuptv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="@string/vacation_dates"
            android:textColor="@android:color/white"
            android:textSize="26sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@android:color/white"
            >

        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"

            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"


                >

                <TextView
                    android:id="@+id/vac_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10sp"
                    android:textSize="51sp"
                    android:text="21"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/vac_tex"
                    android:layout_width="53sp"
                    android:layout_height="36sp"
                    android:layout_below="@+id/vac_num"
                    android:text="Vacation days"
                    android:layout_centerHorizontal="true"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                    android:textColor="@android:color/white"
                    android:layout_below="@+id/vac_tex"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="41sp"
                    android:layout_height="61sp"
                    />
                
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                android:layout_width="41sp"
                android:layout_height="61sp"

                    android:layout_gravity="center"
                    />
            </LinearLayout>


        </LinearLayout>

        <!--<Button-->
            <!--android:id="@+id/Done"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="55sp"-->
            <!--android:layout_marginTop="10sp"-->
            <!--android:background="@color/signup"-->
            <!--android:paddingTop="5dp"-->
            <!--android:text="@string/done"-->
            <!--android:textColor="@android:color/white"-->
            <!--android:textSize="36sp"-->

            <!--android:textStyle="bold" />-->
    </LinearLayout>
</RelativeLayout>