<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel_comp"
    android:layout_width="match_parent"
    android:layout_height="342sp"
    android:padding="5sp"
    android:layout_gravity="center"
    android:orientation="vertical">
    <ImageView
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/green"
        android:scaleType="centerCrop"
        />
    <LinearLayout
        android:id="@+id/vaclayout"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="top"
        android:layout_marginTop="40sp"
        android:layout_alignParentTop="true"

        android:layout_width="270sp"
        android:layout_height="180sp"

        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/popuptv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"

            android:text="@string/vacation_dates"
            android:textColor="@android:color/white"
            android:textSize="26sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@android:color/white"
            >

        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"

            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <ViewSwitcher
                    android:id="@+id/vac_num"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textview_vac"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5sp"
                    android:textSize="51sp"

                    android:onClick="TextviewClicked"
                    android:text="21"
                    android:textColor="@android:color/white" />
                    <EditText
                        android:id="@+id/editvacation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </ViewSwitcher>

                <TextView
                    android:id="@+id/vac_tex"
                    android:layout_width="53sp"
                    android:layout_height="36sp"
                    android:layout_below="@+id/vac_num"
                    android:text="Vacation Days"
                    android:layout_centerHorizontal="true"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
                <Button
                    android:id="@+id/editvac"
                    android:layout_width="50sp"
                    android:layout_height="20sp"
                    
                    android:textColor="@android:color/white"
                    android:layout_below="@+id/vac_tex"
                    android:layout_centerHorizontal="true"
                    android:text="Edit"
                    android:textSize="12sp"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/white_borders"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignEnd="@+id/textView"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/textView"
                android:layout_weight="1">
                <ViewSwitcher
                    android:id="@+id/sick_num"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/sick_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5sp"
                    android:text="9"
                    android:textColor="@android:color/white"
                    android:textSize="51sp" />
                    <EditText
                        android:id="@+id/editsick"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </ViewSwitcher>
                <TextView
                    android:id="@+id/secondtv"
                    android:layout_width="43sp"
                    android:layout_height="36sp"
                    android:layout_below="@id/sick_num"
                    android:layout_centerHorizontal="true"
                    android:text="Sick Leaves"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
                <Button
                    android:id="@+id/edit2"
                    android:layout_width="50sp"
                    android:layout_height="20sp"
                    android:layout_marginTop="5sp"
                    android:textSize="12sp"
                    android:text="Edit"
                    android:layout_below="@+id/secondtv"
                    android:textColor="@android:color/white"
                    android:background="@drawable/white_borders"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ViewSwitcher
                    android:id="@+id/workhome_num"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:textSize="51sp"
                    android:text="21"
                    android:layout_centerHorizontal="true"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="5sp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/hometv" />
                    <EditText
                        android:id="@+id/edithome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </ViewSwitcher>
                <TextView
                    android:id="@+id/thirdview"
                    android:layout_width="69sp"
                    android:layout_height="36sp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:text="Working from home"
                    android:layout_centerHorizontal="true"

                    android:layout_below="@+id/workhome_num"
                    />
                <Button
                    android:id="@+id/edit3"
                    android:layout_width="50sp"
                    android:layout_height="20sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5sp"
                    android:textSize="12sp"
                    android:background="@drawable/white_borders"
                    android:layout_below="@+id/thirdview"
                    android:text="Edit"
                    android:textColor="@android:color/white"

                    />
            </RelativeLayout>


        </LinearLayout>
        

        <!--<Button-->
            <!--android:id="@+id/Done"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="55sp"-->
            <!--android:layout_marginTop="10sp"-->
            <!--android:background="@color/signup"-->
            <!--android:paddingTop="5dp"-->
            <!--android:text="@string/done"-->
            <!--android:textColor="@android:color/white"-->
            <!--android:textSize="36sp"-->

            <!--android:textStyle="bold" />-->
    </LinearLayout>
    <Button
        android:id="@+id/done_vac"
        android:layout_width="240sp"
        android:layout_height="wrap_content"
        android:text="@string/done"
        android:layout_below="@+id/vaclayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:background="@android:color/white"
        android:textColor="@color/pink"
        />
</RelativeLayout>