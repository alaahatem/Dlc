<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">

    <ImageView
        android:id="@+id/criteria"
        android:layout_width="match_parent"
        android:layout_height="424sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"

        android:background="@android:color/transparent"
        android:src="@drawable/pinkish">

    </ImageView>
<LinearLayout
    android:id="@+id/linear_scroll"
    android:layout_width="260sp"
    android:layout_height="200sp"
    android:layout_centerInParent="true"

    >
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20sp"
        >

        <LinearLayout
            android:id="@+id/linear_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/linear_addlevel"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:weightSum="10">

                <EditText
                    android:id="@+id/edittext_level"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:text="CEO"
                    />
                <Button

                    android:id="@+id/dropdown"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:text="1"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    />
            </LinearLayout>
            <ImageButton
                android:id="@+id/add_edit"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_gravity="bottom|start"
                android:src="@drawable/ic_add_black_24dp"
                android:background="@android:color/transparent"
                android:layout_alignBottom="@id/scrollView"
                android:layout_alignLeft="@id/scrollView"
                />

        </LinearLayout>


    </ScrollView>
</LinearLayout>
    <Button
        android:id="@+id/done_level"
        android:layout_width="200sp"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"

        android:background="@android:color/white"

        android:text="@string/done"
        android:textAlignment="center"
        android:textColor="@color/criteria"
        android:textSize="22sp"

        android:layout_marginBottom="50sp"
        android:layout_alignBottom="@id/criteria"



        />

</RelativeLayout>